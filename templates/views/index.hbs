
    {{>header}}

   
<main>

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light jambotext">We build products on time and within your budget.</h1>
        <p class="lead text-muted">At Pinga, we are passionate about building reliable web and mobile products.</p>
        <p class="lead text-muted">We are really good with <b>#NodeJs, #Python, #Django, #Flask, #PHP, #CodeIgniter, #ReactJs</b></p>
        
      </div>
    </div>
  </section>
 
  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
         {{#content}}

        <div class="col">
          <div class="card shadow-sm">
            <img class="bd-placeholder-img card-img-top"  src="/img/{{this.image}}" alt="{{this.title}}" />

            <div class="card-body">
              {{!-- <p class="card-text">{{{ trimString this.description}}}</p> --}}
               <p class="card-text">{{{ this.description}}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/story/{{this.id}}">View</a>
                  {{!-- <button type="button" class="btn btn-sm btn-outline-secondary">View</button> --}}
                  {{!-- <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> --}}
                </div>
                
              </div>
            </div>
          </div>
        </div>
        
      {{/content}}
        
        
      </div>
    </div>
  </div>

</main>

 {{>footer}}
